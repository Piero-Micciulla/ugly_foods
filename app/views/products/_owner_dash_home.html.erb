<div class="top-shop d-flex">
  <div class="shop-owner-stats shop-owner-stats-1" style="padding-bottom: 20px;">

    <div class="shop-owner-rating" style="border-left: 5px solid #EB4964; padding-left: 20px;">
      <div class="d-flex justify-content-between">
        <h3 class="purple">Your rating</h3>
        <%= link_to shop_path(current_user.shop) do%>
          <p class="back-to-store">See your storefront</p>
        <% end %>
      </div>
      <div class="d-flex">
        <h2><%= current_user.shop.calculate_rating %></h2>
        <div class="dashboard-rating d-flex flex-wrap" style="padding-top: 10px; padding-left: 10px;">
          <% current_user.shop.calculate_rating.to_i.times do %>
            <i class="fas fa-star" style="color: #F6C753; padding-left: 2px;"></i>
          <% end %>
        </div>
      </div>
      <div class="d-flex">
        <i class="fas fa-heart fa-2x" style="padding-left: 5px; "></i>
        <p style="padding-left: 20px;"><%= "#{current_user.shop.likes.count} users loves your shop " %></p>
      </div>
    </div>

  </br>

    <h5 class="purple" style="padding-bottom: 10px; padding-top: 20px;">Read recent ratings</h5>
    <div class="index-scroll force_overflow">
      <div data-spy="scroll" data-offset="0" class="scrollbar scrollbar-primary scrollbar-owner overflow-auto" style="padding:10px;">
        <div class="scrollbar-items">
          <div class="shop-owner-feedback">
            <% current_user.shop.ratings.each do |rating| %>

                <div class="shop-owner-feedback-card">
                  <div class="d-flex justify-content-between" style="padding: 0px; padding-top: 10px;">
                    <div class="d-flex">
                      <strong><h6 style="padding-right: 10px;"><%= rating.rating %></h6></strong>
                      <% rating.rating.times do %>
                        <i class="fas fa-star" style="color: #F6C753"></i>
                      <% end %>
                    </div>
                    <p class="grey" style="padding:0px; margin: 0px;"> <%= rating.created_at.strftime("%m/%d/%Y") %> </p>
                  </div>
                  <div class="d-flex" style="padding: 0px; margin: 0px;">
                    <p class="grey" style="margin: 5px;"> Written by </p> &nbsp
                    <p style="margin: 5px;"><%= rating.user.first_name %> </p> &nbsp
                    <p style="margin: 5px;"><%= rating.user.last_name %> </p>
                  </div>
                  <p><%= rating.content %></p>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="shop-owner-stats shop-owner-stats-2" style="height: min-content;">
    <h3>Here are your stats! ðŸ’¡</h3>
    <% shop_stats = current_user.shop.amnt_saved %>
      <div class="d-flex">
        <%= image_tag("ugly-white.png", :alt => "shop", style: 'width: 30px; height: 30px;') %>
        <p style="padding-left: 8px;">You have saved <%= shop_stats[:kg_ugly_sum]%> kg & <%= shop_stats[:units_ugly_sum]%> units of ugly foods </p>
      </div>
      <div class="d-flex">
        <%= image_tag("old-white.png", :alt => "shop", style: 'width: 30px; height: 30px;') %>
        <p style="padding-left: 8px;">You have saved <%= shop_stats[:kg_old_sum]%> kg & <%= shop_stats[:units_old_sum]%> units of oldies but goldies </p>
      </div>
      <div class="d-flex">
        <%= image_tag("flower-white.png", :alt => "shop", style: 'width: 30px; height: 30px;') %>
        <p style="padding-left: 8px;">You have saved <%= shop_stats[:flower_sum]%> units of flowers </p>
      </div>
    </br>
    <h4>Let's save the foods!</h4>
    <h5> We're all beautiful on the inside</h5>
  </div>

</div>
