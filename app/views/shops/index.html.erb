<div class="index-page d-flex" style="width: 100%">
  <div class="shops-index">
    <% @shops.each do |shop| %>
      <div class="shop-info d-flex">

        <div class="shop-image-rating">
          <div>
            <%= image_tag("shop-placeholder.jpg", :alt => "shop", style: "width: 165px; height: 120px; border-radius: 10px; margin-bottom: 10px;") %>
          </div>
          <div class="rating-index d-flex flex-wrap align-items-center">
            <div class="calculated-rating">
              <%=shop.calculate_rating %>
            </div>
            <% shop.calculate_rating.times do %>
              <i class="far fa-star"></i>
            <% end %>
          </div>
        </div>

        <div class="more-shop-info">
          <div class="name-and-distance">
            <strong><%= shop.name %></strong>
            <p> 0.8miles away </p>
          </div>

          <div class="produce d-flex flex-wrap">
            <div class="produce-ugly produce-display-index d-flex flex-wrap">
              <%= image_tag("ugly-index.png", :alt => "shop", class: "scroll-icons") %>

              <div class="produce-ugly-scroll index-scroll force_overflow">
                <div data-spy="scroll" data-offset="0" class="scrollbar scrollbar-primary scollbar-lady-lips">
                  <div class="scrollbar-items">
                    <% shop.ugly_foods.each do |ugly_food| %>
                      <div class="ugly-food-display">
                        <p class="produce-name"><%= ugly_food.produce_type.name %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

            </div>

            <div class="produce-old produce-display-index d-flex flex-wrap">
              <%= image_tag("old-index.png", :alt => "shop", class: "scroll-icons") %>
              <div class="produce-ugly-scroll index-scroll force_overflow">
                <div data-spy="scroll" data-offset="0" class="scrollbar scrollbar-primary">
                  <div class="scrollbar-items">
                    <% shop.old_foods.each do |old_food| %>
                      <div class="ugly-food-display">
                        <p class="produce-name"> <%= old_food.produce_type.name %> </p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>


            <div class="produce-flowers produce-display-index d-flex flex-wrap">
              <%= image_tag("flower-index.png", :alt => "shop", class: "scroll-icons") %>
              <div class="produce-ugly-scroll index-scroll force_overflow">
                <div data-spy="scroll" data-offset="0" class="scrollbar scrollbar-primary">
                  <div class="scrollbar-items">
                    <% shop.flowers.each do |flower| %>
                      <div class="ugly-food-display">
                       <p class="produce-name"> <%= flower.produce_type.name %> </p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              </div>
            </div>
          </div>

        </div>
      <% end %>
    </div>





<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
