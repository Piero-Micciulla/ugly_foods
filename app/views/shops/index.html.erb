<div class="index-page">

  <div class="shops-index">
    <% @shops.each do |shop| %>
      <div class="shop-info d-flex">

        <div class="shop-image-rating">
          <div>
            <%= image_tag("shop-placeholder.jpg", :alt => "shop", style: "width: 165px; height: 120px;") %>
          </div>
          <div class="rating">
            <%=shop.calculate_rating %>
            <%  %>
          </div>
        </div>

        <div class="more-shop-info">
          <%= shop.name %>
        </div>

      </div>
    <% end %>
  </div>

  <div id="map"
           style="width: 35vw; height: 80vh; position: sticky; top: 0; right: 0; border: 1px solid black; background-color: black;">
  </div>

</div>
