<div class="nav-bar-global" style="height: 100px; background-color: grey; width: 100%;">
  <div d-flex justify-content-right>
    <div class="btn-group aign-items-right">
      <button type="button" class="btn btn-secondary dropdown-toggle dropleft" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= image_tag("cart.png", :alt => "shop", style: "width: 40px; height: 40px;")%>
      </button>
      <div class="dropdown-menu shopping-cart-drop">
        <% if current_user %>
        <%= "There is nothing in your cart" if current_user.current_cart.product_selections.empty? %>
        <% group_cart_items = current_user.current_cart.product_selections.group_by(&:shop) %>
        <% group_cart_items.keys.each do |shop_key| %>
        <div class="grouped-cart-items">
          <strong><%= shop_key.name %></strong>
          <% group_cart_items[shop_key].each do |select| %>
          <div class="cart-cards d-flex flex-wrap justify-content-between">
            <strong><p><%= select.product.produce_type.name %></p></strong>
            <div class="pending-purchase-info">
              <p><%= select.units ? "#{select.units} units" : "#{select.kg} kg" %></p>
              <p>€ <%= select.total_price.round(2) %></p>
            </div>
            <%= link_to product_selection_path(select),
            method: :delete,
            data: {confirm: "Are you sure you want to remove from cart?"},
            remote: true do %>
            <i class="far fa-minus-square"></i>
            <% end %>
          </div>
          <% end %>
        </div>
        <% end %>
        <div>
          <%= link_to cart_path(current_user.current_cart) do%>
          <p>See cart</p>
          <% end %>
        </div>
        <% else %>
        hello
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="shops-show-all-back">
      <%= link_to shops_path do %>
      <div class="back-to-shops" style="color: white;">
        <i class="fas fa-arrow-circle-left fa-2x"></i>
      </div>
    <% end %>

<div class="shops-show-all">
  <div class="storefront-container d-flex">
  <div style="position:relative;">

    <%= image_tag("storefront-2.png", :alt => "shop", style: "position: absolute; width: 90px; height: 100px; top:-7%;" ) %>
    <h1 class="purple" style="padding-top: 50px;">Welcome to <%= @shop.user.first_name %>'s shop, <%= @shop.name %></h1>

          <div class="ratings-title">
          <h5>Overall rating <%= @shop.calculate_rating %></h5>

          <div class="show-user-rating-stars d-flex flex-wrap">
            <% @shop.calculate_rating.round.times do %>
            <i class="fas fa-star" style="color:#F5AC7D ;"></i>
            <% end %>
          </div>

          <% if user_signed_in? %>
            <div class="likes d-flex justify-content-left" style="text-align: left;">
              <%= button_to shop_likes_path(@shop), method: :post do %>
              <% if @liked_shop %>
              <i class="fas fa-heart"></i>
              <% else %>
              <i class="fal fa-heart"></i>
              <% end %>
              <% end %>
              <p><%= @shop.likes.count %> <%= (@shop.likes.count) == 1 ? 'Like' : 'Likes'%></p>
            </div>
          <% end %>

        </div>

    <div class="card-shop-show d-flex">
        <div>
          <%= image_tag("example.jpg", :alt => "shop", style: "width: 270px; height: 200px; border-radius: 20px;")%>
        </div>
        <div class="hours" style="margin-left: 20px;">
          <p class="purple"><strong> <%= @shop.address %> </strong></p>
          <p class="opening-hours"><strong>Monday</strong> 10:00-18:00</p>
          <p class="opening-hours"><strong>Tuesday</strong> 10:00-18:00</p>
          <p class="opening-hours"><strong>Wednesday</strong> 10:00-18:00</p>
          <p class="opening-hours"><strong>Thursday</strong> 10:00-18:00</p>
          <p class="opening-hours"><strong>Saturday</strong> 12:00-17:00</p>
          <p class="opening-hours"><strong>Sunday</strong> 12:00-17:00</p>
        </div>
    </div>


    <div class="card-shop-ratings">



