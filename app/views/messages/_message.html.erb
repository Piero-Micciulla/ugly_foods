<div class="message-container type-<%= message.user.shop ? 'shop' : 'user' %>" id="message-<%= message.id %>">
  <i class="author">

    <div class="name-time d-flex align-items-center <%= message.user == current_user ? 'mine' : 'yours' %>" id="message-<%= message.id %>">
    <span><%= message.user.first_name.downcase.capitalize %> &nbsp</span>
    <small style="color: #8D8D8D;"><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </div>

  </i>

  <p class = "message-response message <%= message.user == current_user ? 'mine' : 'yours' %>"><%= message.content %></p>
</div>

